<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android" 
    android:shape="rectangle">
    
    
    <!-- 填充 -->
    <solid android:color="@color/common_grey"/>
    <!-- 圆角 -->
    <corners android:radius="10dip"/>
    <!-- 描边 -->
    <stroke android:width="1dp" android:color="#ff0000"/>

    <!-- 内间距 -->
    <padding 
        android:left="10dip"
        android:right="10dip"
        android:top="5dip"
        android:bottom="5dip"/>
    
    <!-- 渐变 -->
    <gradient 
        android:startColor="@color/common_black_word"
        android:centerColor="@color/common_grey"
        android:endColor="@color/common_white"/>
    
    
</shape>
