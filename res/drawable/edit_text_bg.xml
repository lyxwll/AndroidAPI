<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
    
    <!-- 编辑框的背景 -->
    
    <!-- 聚焦状态时的背景 为common_BLUE-->
    <item 
        android:drawable="@drawable/edit_text_bg_focused" 
        android:state_focused="true"></item>
    
    <!-- 选择状态时的背景:为common_BLUE -->
    <item android:state_selected="true"
        android:drawable="@drawable/edit_text_bg_selected"></item>

    <!--  -->
    <item android:state_pressed="true"
        android:drawable="@drawable/edit_text_bg_selected"></item>
    
    <!-- 普通状态时的背景 :为common_grey-->
    <item android:drawable="@drawable/edit_text_bg_normal"></item>
    
    
</selector>
